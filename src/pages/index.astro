---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Bienvenue from "../assets/Images/Bienvenue.jpg";
---

<Layout>
  <Image src={Bienvenue} alt="Photo d'accueil" fit="cover" id="head-photo" />
</Layout>

<style lang="scss">
  #head-photo {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    object-fit: cover;
    object-position: top;
    z-index: -1;
  }
</style>
