---
import PageHero from "../components/global/PageHero.astro";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Massage from "../assets/images/pages/Massages.jpg";
import PriceTable from "../components/prestations/PriceTable.astro";
import { massagePrices } from "../data/massagePrices";
import ContactCard from "../components/global/ContactCard.astro";
---

<Layout>
  <PageHero
    imageDesktop={Massage}
    imageMobile={Massage}
    altText="Photo d'accueil de la section massages"
    title="Massages"
    subtitle=""
  />
  <div class="page-content">
    <h1>Offrez-vous une parenthèse de bien-être.</h1>
    <PriceTable title="Tarif des massages" , items={massagePrices} />
  </div>
  <ContactCard />
</Layout>

<style lang="scss">
  .page-content {
    margin-top: 90vh;
    padding-bottom: 2rem;
    :first-child {
      text-align: center;
      padding-top: 1.5rem;
      font-style: italic;
    }
  }
</style>
